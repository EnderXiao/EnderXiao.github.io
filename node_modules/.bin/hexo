#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="$basedir/E:/EnderXiao.github.io/node_modules/.store/hexo@7.1.1/node_modules"
else
  export NODE_PATH="$NODE_PATH:$basedir/E:/EnderXiao.github.io/node_modules/.store/hexo@7.1.1/node_modules"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../.store/hexo@7.1.1/node_modules/hexo/bin/hexo" "$@"
else
  exec node  "$basedir/../.store/hexo@7.1.1/node_modules/hexo/bin/hexo" "$@"
fi
